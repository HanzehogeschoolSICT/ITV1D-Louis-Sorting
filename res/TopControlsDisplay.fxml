<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<HBox xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/8.0.112"
      fx:controller="controllers.TopControlsController"
      alignment="CENTER" spacing="10.0">
    <padding>
        <Insets bottom="10.0" top="10.0"/>
    </padding>
    <Label contentDisplay="RIGHT" text="Data set size:">
        <graphic>
            <Spinner fx:id="dataSetSpinner"/>
        </graphic>
    </Label>
    <Button text="New Data Set" onAction="#onNewDataSetButtonAction" defaultButton="true"/>
</HBox>
